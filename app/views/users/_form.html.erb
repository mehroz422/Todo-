<% if @user.errors.any?%>
<h2>The following errors prevented the todo from being saved</h2> 
<ul>
     <% @user.errors.full_messages.each do |msg| %>
     <li> <%= msg %> </li>
     <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
<p>
   <%= f.label :name %> <br>
   <%= f.text_field :name %>
</p>

<p>
<%= f.label :description %> <br>
<%= f.text_area :description %>
</p>

<p>
    <%= f.submit %>


<% end %>
<%= link_to 'Back to todos listing', users_path %>